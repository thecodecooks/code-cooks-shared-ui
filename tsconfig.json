{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "types",
    "target": "es5",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "moduleResolution": "node",
    "jsx": "react",
    "outDir": "./dist",
    "lib": ["dom", "esnext"],
    "module": "esnext",
    "esModuleInterop": true
  },
  "include": ["src/**/*", "src/typings"],
  "exclude": ["node_modules"]
}
